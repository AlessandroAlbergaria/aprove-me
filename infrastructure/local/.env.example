# Infrastructure Local Configuration
# Copy this file to .env and adjust the values as needed

# General
NODE_ENV=development

# Backend
BACKEND_PORT=3000

# Frontend
FRONTEND_PORT=3001

# PostgreSQL
POSTGRES_DB=aprove-me
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASS=admin
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_QUEUE=payable-batch
RABBITMQ_DLQ=payable-batch-dlq

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Email (Mailtrap for testing)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
EMAIL_FROM="Aprove-me System <noreply@aprove-me.com>"
EMAIL_TO_OPS=ops@aprove-me.com

# PgAdmin (Optional - use with --profile tools)
PGADMIN_EMAIL=admin@aprove-me.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
